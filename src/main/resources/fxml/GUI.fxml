                           </children>
                        </HBox>
                        <ListView fx:id="serverMessages" VBox.vgrow="ALWAYS" />
                        <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0">
                           <children>
                              <Button fx:id="serverMessageBtn" mnemonicParsing="false" onAction="#doSendServerMessage" text="+ Message" />
                           </children></HBox>
                     </children>
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                  </VBox>
               </children></AnchorPane>
            <AnchorPane fx:id="clientPane" />
         </children>
      </StackPane>
   </center>
   <top>
      <HBox id="top" BorderPane.alignment="CENTER">
         <children>
            <BorderPane>
               <center>
                  <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER">
                     <image>
                        <Image url="@images/ConnTestLogo.png" />
                     </image></ImageView>
               </center></BorderPane>
            <Region HBox.hgrow="ALWAYS" />
            <Label text="Server">
               <HBox.margin>
                  <Insets right="25.0" />
               </HBox.margin>
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <Region HBox.hgrow="ALWAYS" />
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </HBox>
   </top>
